pipeline {
  agent any
	
  stages {
    stage("Checkout") {
       steps {
	  checkout scm
	   sh '''
            #!/bin/sh
            ls
            pwd 
	    ./echo_example.sh
         '''
	
		}
	 }
    stage("build") {
      steps {
         
          sh '''
            #!/bin/sh
            echo "hello world"
            echo "build"
            rm -rf build
            mkdir build
            cd build
            touch view.sh
            ls
            pwd
         
            
         '''
        
          }
          }
      stage ("test") {
        steps {
           sh '''

           ls
            pwd
            echo stage test completed
            '''
         
             
          
        }
        }
        
      }
    }
